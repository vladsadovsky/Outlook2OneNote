{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Grah API test",
      "program": "${workspaceFolder}/src/test/graph-auth-test.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost (Office Add-in)",
      "url": "https://localhost:3000/taskpane.html",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true
    },
    {
      "name": "Attach to Edge (Outlook Add-in)",
      "type": "msedge",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "timeout": 10000,
      "trace": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost (Office Add-in)",
      "url": "https://localhost:3000/taskpane.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true
    }
  ]
}